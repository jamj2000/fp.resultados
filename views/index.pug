extends layout

block content
  .container.d-flex.justify-content-between.mb-5
    a.btn.btn-sm.align-middle.btn-primary.mt-1(href='/profesores/'+usuario.id) #{usuario.nombre} #{usuario.apellido1} #{usuario.apellido2} 
    a.btn.btn-sm.align-middle.btn-outline-danger.fa.fa-sign-out.fa-lg.mt-1.ml-3.py-2(role='button', href='/logout', title="Salir")  
  .container.d-flex.justify-content-between
    .row
      a.btn.btn-small.btn-default.col-lg-4(href="/informacion")
        b Información
        br
        img(src="/img/info.png", alt="informacion")
      a.btn.btn-small.btn-default.col-lg-4(href="/resultados")
        b Resultados
        br
        img(src="/img/resultados.png", alt="resultados")
      a.btn.btn-small.btn-default.col-lg-4(href="/informes")
        b Informes
        br
        img(src="/img/informes.png", alt="informes")
    .row
      a.btn.btn-small.btn-default.col-lg-4(href="/modulos")
        b Módulos
        br
        img(src="/img/modulos.png", alt="modulos")
      a.btn.btn-small.btn-default.col-lg-4(href="/profesores")
        b Profesores
        br
        img(src="/img/profesores.png", alt="profesores")
      a.btn.btn-small.btn-default.col-lg-4(href="/alumnos")
        b Alumnos
        br
        img(src="/img/alumnos.png", alt="alumnos")
